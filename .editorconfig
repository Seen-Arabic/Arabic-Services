# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
trailing_comma = all
bracket_spacing = true
arrow_parens = always
prose_wrap = preserve

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
